<% layout("layouts/boilerplate.ejs") %>
<div class="row">
  <h1 class="text-center">New CampGround</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/new" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

    <div class="mb-3">
      <label for="Title" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input type="text" class="form-control " id="Title" name="campground[title]" placeholder="Title" required>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please Enter the Title
        </div>
      </div>
    </div>
    <div class="mb-3 ">
      <label for="location" class="col-sm-2 col-form-label">Location</label>
      <div class="col-sm-10">
        <input type="text" class="form-control " id="location" name="campground[location]" placeholder="Location" required >
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please Enter the Location
        </div>
       
      </div>
    </div>

    <div class="mb-3 ">
      <label for="image" class="col-sm-2 col-form-label">Image</label>
      <div class="col-sm-10">
        <input type="file"  class="form-control" id="image" name="campground[image]" placeholder="Image" required >
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please Enter the Image
        </div>
      </div>
    </div>

    <div class="mb-3 ">
      <label for="Price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="Price" name="campground[price]" placeholder="Price" required min="0">
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please Enter valid Price
         </div>
      </div>
    </div>


   

    <div class="mb-3 ">
      <label for="description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <textarea type="text" class="form-control" id="description" name="campground[description]" placeholder="description" required></textarea>
        <div class="valid-feedback">
          Looks good
        </div>
        <div class="invalid-feedback">
          Please Write the description
        </div>
      </div>
    </div>

   
    <button class="btn btn-primary">Add Campground</button>
   
  </div>
</div>
</form>

