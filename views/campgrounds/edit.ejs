<% layout("layouts/boilerplate.ejs") %>
<form
  action="/campgrounds/<%=data.id %>/edit?_method=patch"
  method="post"
  class="needs-validation"
  novalidate
  enctype="multipart/form-data"
>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="mb-3">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="title"
            name="campground[title]"
            placeholder="Title"
            value="<%= data.title %>"
            required
          />
          <div class="valid-feedback">Looks good</div>
          <div class="invalid-feedback">Please Enter the Title</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="col-sm-2 col-form-label">Location</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="location"
            name="campground[location]"
            placeholder="Location"
            value="<%= data.location %>"
            required
          />
          <div class="valid-feedback">Looks good</div>
          <div class="invalid-feedback">Please Enter the Location</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="col-sm-2 col-form-label">Image</label>
        <div class="mb-3">
          <a href="<%= data.image.url %>">
            <img
              class="rounded"
              src="<%= cropedImg %>"
              alt="image"
              width="100"
              height="100"
            />
          </a>
        </div>
        <div class="col-sm-10">
          <input
            type="file"
            class="form-control"
            id="image"
            name="campground[image]"
            placeholder="Image"
            value="<%= data.image %>"
          />
          <div class="valid-feedback">Looks good</div>
          <div class="invalid-feedback">Please Upload Image</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="Price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
          <input
            type="number"
            class="form-control"
            id="Price"
            name="campground[price]"
            placeholder="Price"
            value="<%= data.price %>"
            required
            min="0"
          />
          <div class="valid-feedback">Looks good</div>
          <div class="invalid-feedback">Please Enter valid Price</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="Textarea" class="form-label">Description</label>
        <textarea
          type="text"
          required
          class="form-control"
          id="Textarea"
          rows="3"
          name="campground[description]"
        >
<%= data.description %></textarea
        >
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">Please Write the description</div>
      </div>

      <button class="btn btn-primary">Update</button>

      <a href="/campgrounds/<%= data.id %>" class="btn btn-primary">Back</a>
    </div>
  </div>
</form>
