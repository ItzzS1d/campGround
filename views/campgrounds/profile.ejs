<% layout("layouts/boilerplate.ejs") %>

<div class="container">
  <% if(camps && camps.length) {%> <% for (let camp of camps) {%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid rounded float-start" src="<%= camp.image.url %>" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location %></small>
          </p>
          <a href="/campgrounds/<%= camp.id %>" class="btn btn-primary"
            >View <%= camp.title %></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %> <% } else{%>
  <div class="text-center">
    <h1>No Campgrounds Found</h1>
  </div>
  <% } %>

  <form action="/delete/<%=currentUser._id %>?_method=delete" method="post">
    <button class="btn btn-danger">Delete Account</button>
  </form>
</div>
